{
  "name": "extension",
  "version": "0.5.7",
  "private": true,
  "displayName": "Meelio",
  "description": "Focus, calm & productivity with every new tab",
  "author": "zainzafar90@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:all": "npm run build:firefox && npm run build:edge && npm run build:chrome && npm run build:opera && npm run build:safari",
    "build:edge": "plasmo build --target=edge-mv3",
    "build:brave": "plasmo build --target=brave-mv3",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "build:opera": "plasmo build --target=opera-mv3",
    "build:safari": "plasmo build --target=safari-mv3",
    "package": "plasmo package",
    "package:all": "npm run package:firefox && npm run package:edge && npm run package:chrome && npm run package:opera && npm run package:safari",
    "package:firefox": "plasmo package --target=firefox-mv3",
    "package:edge": "plasmo package --target=edge-mv3",
    "package:brave": "plasmo package --target=brave-mv3",
    "package:chrome": "plasmo package --target=chrome-mv3",
    "package:opera": "plasmo package --target=opera-mv3",
    "package:safari": "plasmo package --target=safari-mv3",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf .plasmo"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@number-flow/react": "^0.3.0",
    "@plasmohq/storage": "^1.13.0",
    "@repo/shared": "*",
    "@repo/ui": "*",
    "@tailwindcss/typography": "^0.5.9",
    "axios": "^1.5.0",
    "blurhash": "^2.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dexie": "^4.0.9",
    "framer-motion": "^11.11.9",
    "gsap": "^3.12.2",
    "i18next": "^23.10.1",
    "i18next-browser-languagedetector": "^7.2.0",
    "lucide-react": "^0.454.0",
    "next-themes": "^0.3.0",
    "plasmo": "0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-i18next": "^15.1.4",
    "react-router-dom": "^6.16.0",
    "react-textarea-autosize": "^8.5.3",
    "recharts": "^2.13.0",
    "simple-icons": "^13.18.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "use-sync-external-store": "^1.5.0",
    "usehooks-ts": "^2.9.1",
    "zod": "^3.22.4",
    "zustand": "^5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@types/chrome": "0.0.258",
    "@types/node": "^20.11.24",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/recharts": "^1.8.29",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "public/**/*.svg",
          "public/**/*.png",
          "public/**/*.jpg",
          "public/**/*.webp",
          "public/**/*.avif",
          "public/**/*.mp4",
          "public/**/*.mp3",
          "public/**/*.json"
        ],
        "matches": [
          "https://www.plasmo.com/*"
        ]
      }
    ],
    "host_permissions": [
      "https://*.meelio.io/*"
    ],
    "optional_host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "notifications"
    ],
    "optional_permissions": [
      "tabs"
    ]
  }
}