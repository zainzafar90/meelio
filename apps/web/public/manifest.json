{
  "manifest_version": 3,
  "name": "Meelio",
  "short_name": "Meelio",
  "version": "0.5.0",
  "description": "Find your focus & calm with enhanced soundscapes. Meelio's tools fuel productivity and relaxation",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage", "cookies"],
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.html", "assets/*"],
      "matches": ["https://*.meelio.io/*"]
    }
  ],
  "host_permissions": ["https://*.meelio.io/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "64": "/android-chrome-64x64.png",
    "192": "/android-chrome-192x192.png",
    "512": "/android-chrome-512x512.png"
  }
}
