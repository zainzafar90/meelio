{
  "name": "meelio",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "build:extension": "turbo run build --filter=extension",
    "package": "turbo run package --filter=extension",
    "start:api": "turbo run start --filter=api",
    "start:web": "turbo run start --filter=web",
    "clean": "turbo run clean",
    "release": "turbo run release",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate:name": "cd apps/api && npx drizzle-kit generate --name=$name",
    "db:generate": "cd apps/api && npx drizzle-kit generate",
    "db:migrate": "cd apps/api && npx drizzle-kit migrate",
    "db:studio": "cd apps/api && npx drizzle-kit studio",
    "db:seed": "cd apps/api && npx tsx ./src/db/seed.ts",
    "db:up": "npm run db:generate && npm run db:migrate",
    "db:push": "cd apps/api && npx drizzle-kit push",
    "db:export": "cd apps/api && npx drizzle-kit export"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.4.2"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "0.24.0"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
